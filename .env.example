# Event-Driven E-commerce System Environment Variables

# Docker Compose Environment
COMPOSE_PROJECT_NAME=event-driven-ecommerce

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASS=password
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_AMQP_PORT=5672

# MongoDB Configuration
MONGO_PORT=27017

# Service Ports (External/Host Ports)
ORDER_SERVICE_PORT=3001
INVENTORY_SERVICE_PORT=3002
NOTIFICATION_SERVICE_PORT=3003

# Container Internal Ports (used inside containers)
ORDER_SERVICE_INTERNAL_PORT=3000
INVENTORY_SERVICE_INTERNAL_PORT=3000
NOTIFICATION_SERVICE_INTERNAL_PORT=3000

# Development Settings
NODE_ENV=development
LOG_LEVEL=info
